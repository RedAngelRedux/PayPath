
<div class="mt-5 border border-1 p-4">
    @if(Payments.Count > 0)
    {
        <h2>Payment Schedule</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-custom">
                <thead>
                    <tr>
                        <th>Payment #</th>
                        <th>Payment</th>
                        <th>Principal</th>
                        <th>Interest</th>
                        <th>Total Interest</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Payments)
                    {
                        <tr>
                            <td>@payment.Month</td>
                            <td>@payment.Amount.ToString("C")</td>
                            <td>@payment.Principle.ToString("C")</td>
                            <td>@payment.Interest.ToString("C")</td>
                            <td>@payment.TotalInterest.ToString("C")</td>
                            <td>@payment.Balance.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No Payments to Display.  Enter some values and press 'Calculate'</p>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public List<LoanPayment> Payments { get; set; } = [];
}
